/* 浅灰色背景胶囊装圆角矩形 */  
.zone_1 {  
  display: flex;  
  background-color: white; 
  border-radius: 10px; /* 圆角矩形 */  
  overflow: hidden; /* 防止内容溢出 */  
}  
  
/* 左侧和右侧容器平分矩形左右空间 */  
.zone_1_left, .zone_1_right {  
  flex: 1; /* 平分空间 */  
  display: flex;  
}  
  
/* zone_1_left内部布局 */  
.zone_1_left,.zone_1_right {  
  padding: 10px; /* 内边距 */  
}  
  
/* zone_1_left_image占据左侧约1/4位置 */  
.zone_1_left_image,.zone_1_right_image {  
  flex: 0 0 25%; /* 占据左侧1份宽度 */   
  border-radius: 10px 0 0 10px; /* 左侧圆角 */  
}  
  
/* zone_1_left_0占据剩余3份宽度 */  
.zone_1_left_0,.zone_1_right_0 {  
  flex: 0 0 75%; /* 占据剩余3份宽度 */  
  display: flex;  
  flex-direction: column; /* 垂直排列子元素 */  
  padding-left: 10px; /* 左侧内边距，与image隔开 */  
}  
  
/* zone_1_left_1与zone_1_left_2平分zone_1_left_0的上下空间 */  
.zone_1_left_1, .zone_1_left_2,.zone_1_right_1, .zone_1_right_2 {  
  flex: 1; /* 平分上下空间 */  
  background-color: #ffffff; /* 示例背景色 */  
  padding: 10px; /* 内边距 */  
  box-sizing: border-box; /* 内边距和边框包含在宽度内 */  
}  
  
/* 右侧zone_1_right的布局和zone_1_left一样，但样式可能有所不同 */  
/* ... 这里可以添加zone_1_right的相关样式，如果它与zone_1_left相同则不需要额外添加 */
.image_money{
  width:100rpx;
  height:150rpx;
}
view{
