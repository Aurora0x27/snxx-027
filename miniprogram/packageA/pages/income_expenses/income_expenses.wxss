/* zone_2整体样式 */  
.zone_2 {  
  display: flex;  
  justify-content: space-between;  
  align-items: center;  
  padding: 10px; /* 内边距 */  
  background-color: white;
}  
  
/* zone_2_left样式 */  
.zone_2_left {  
  display: flex;  
  align-items: center;  
}  
  
/* zone_2_left_image样式 */  
.zone_2_left_image {  
  flex: 0 0 25%; /* 占据zone_2_left的左侧1/4位置 */  
  max-width: 100%; /* 防止图片过大 */  
  overflow: hidden; /* 隐藏超出部分 */  
  border-radius: 5px; /* 图片圆角 */  
  margin-right: 10px; /* 右侧内边距，与zone_2_left_0隔开 */  
}  
  
.income_image {  
  width: 100%; /* 图片宽度100% */  
  height: auto; /* 图片高度自适应 */  
}  
  
/* zone_2_left_0样式 */  
.zone_2_left_0 {  
  flex: 0 0 75%; /* 占据剩余3/4位置 */  
  display: flex;  
  flex-direction: column; /* 上下排列子元素 */  
}  
  
/* zone_2_left_1与zone_2_left_2样式 */  
.zone_2_left_1, .zone_2_left_2 {  
  flex: 1; /* 平分上下空间 */  
  font-size: 14px; /* 字体大小 */  
  color: #333; /* 字体颜色 */  
  padding: 5px 0; /* 上下内边距 */  
}  
.zone_2_left_2{
  font-weight: 400;
}
/* zone_2_right样式 */  
.zone_2_right {  
  font-size: 16px; /* 字体大小 */  
  color: #333; /* 字体颜色 */  
  font-weight: bold; /* 加粗 */  
  align-self: flex-end; /* 文本右对齐 */  
}

